<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Review"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="관람평 작성"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="영화제목"
        android:textSize="40dp"
        android:id="@+id/moiveName"/>



    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10점"
        android:textSize="50dp"

        android:id="@+id/txtStarRating"
        />

    <RatingBar
        android:id="@+id/starRating"
        android:isIndicator="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="10"
        android:rating="10"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etxtReview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="평점 및 영화 관람평을 작성해주세요. 한글 220자 작성 가능합니다."
        android:background="@drawable/editborder"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:maxLength="220" />

    <TextView
        android:id="@+id/textLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="글자수가 표시될 자리입니둥"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:textSize="15dp"
        />


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="취소"
        android:id="@+id/btnCancle"/>

    <Button
        android:layout_marginLeft="20dp"
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="작성"
        android:layout_toRightOf="@id/btnCancle"/>

    </RelativeLayout>
</LinearLayout>