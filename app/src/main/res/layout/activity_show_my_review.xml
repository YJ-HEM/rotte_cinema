<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="490dp"
    android:layout_gravity="center"
    android:background="@drawable/reviewback"
    android:orientation="vertical"
    tools:context=".Review"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#252451"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="관람평 보기"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/showReviewMoiveName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="영화제목"
        android:textColor="@color/black"
        android:textSize="31dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"


        />


    <TextView
        android:id="@+id/showReviewTxtStarRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="10점"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:bufferType="spannable"/>

    <RatingBar
        android:layout_marginTop="5dp"
        android:progressBackgroundTint="#9E9E9E"
        android:progressTint="#FFC107"
        android:id="@+id/showReviewStarRating"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="false"
        android:numStars="10"
        android:rating="10"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginHorizontal="10dp"
        android:id="@+id/showReviewtxtReview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editborder"
        android:maxLength="220"
        android:padding="10dp"
        android:textColor="@color/black"
         />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="닫기"
            android:textSize="20dp"
            android:background="#B1B1B1"
            android:textColor="@color/white"/>


    </RelativeLayout>
</LinearLayout>