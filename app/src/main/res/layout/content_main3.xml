<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/white"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/roundshape"
        android:text="로그인"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="로그인 하시고 다양한 혜택을 확인하세요"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/btn_reserve"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/redroundshape"
        android:text="영화별 예매 ㅣ영화관별 예매 "
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnMovie"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:drawablePadding="5px"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="영화"
        android:textColor="@color/black"
        android:textSize="36px"
        android:singleLine="true"
        tools:ignore="RtlCompat"
        android:drawableTop="@drawable/ic_baseline_play_circle_filled_24"
        android:background="@color/white"/>
    <Button
        android:id="@+id/btnReserve"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:drawablePadding="5px"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="영화예매"
        android:textColor="@color/black"
        android:textSize="36px"
        android:singleLine="true"
        tools:ignore="RtlCompat"
        android:drawableTop="@drawable/ic_baseline_local_movies_24"
        android:background="@color/white"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:drawablePadding="5px"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="상영시간표"
            android:textColor="@color/black"
            android:textSize="36px"
            android:singleLine="true"
            tools:ignore="RtlCompat"
            android:drawableTop="@drawable/ic_baseline_schedule_24"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btnCuration"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:drawablePadding="5px"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="큐레이션"
            android:textColor="@color/black"
            android:textSize="36px"
            android:singleLine="true"
            tools:ignore="RtlCompat"
            android:drawableTop="@drawable/ic_baseline_movie_filter_24"
            android:background="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEvent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:drawablePadding="5px"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="이벤트"
            android:textColor="@color/black"
            android:textSize="36px"
            android:singleLine="true"
            tools:ignore="RtlCompat"
            android:drawableTop="@drawable/ic_baseline_emoji_events_24"
            android:background="@color/white"/>
        <Button
            android:id="@+id/btnCinemaInfo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:drawablePadding="5px"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="극장소개"
            android:textColor="@color/black"
            android:textSize="36px"
            android:singleLine="true"
            tools:ignore="RtlCompat"
            android:drawableTop="@drawable/ic_baseline_account_balance_24"
            android:background="@color/white"/>

    </LinearLayout>


    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#252451"

        />


</LinearLayout>